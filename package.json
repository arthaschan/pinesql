    }
  },
  "author": "ivan770",
  "license": "MIT",
  "dependencies": {
    "mysql": "^2.15.0"
  },
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-builder": "^20.13.3",
    "electron-settings": "^3.2.0"
  }
